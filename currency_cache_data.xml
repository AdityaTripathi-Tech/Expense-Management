<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- System Parameters for Currency Service -->
        <record id="param_currency_cache_ttl" model="ir.config_parameter">
            <field name="key">smart_expense.currency_cache_ttl_hours</field>
            <field name="value">24</field>
        </record>

        <record id="param_country_cache_ttl" model="ir.config_parameter">
            <field name="key">smart_expense.country_cache_ttl_days</field>
            <field name="value">7</field>
        </record>

        <record id="param_exchange_api_url" model="ir.config_parameter">
            <field name="key">smart_expense.exchange_api_url</field>
            <field name="value">https://api.exchangerate-api.com/v4/latest</field>
        </record>

        <record id="param_restcountries_api_url" model="ir.config_parameter">
            <field name="key">smart_expense.restcountries_api_url</field>
            <field name="value">https://restcountries.com/v3.1/all?fields=name,currencies</field>
        </record>

        <record id="param_use_api_stubs" model="ir.config_parameter">
            <field name="key">smart_expense.use_api_stubs</field>
            <field name="value">False</field>
        </record>

        <record id="param_ocr_confidence_threshold" model="ir.config_parameter">
            <field name="key">smart_expense.ocr_confidence_threshold</field>
            <field name="value">0.6</field>
        </record>

        <record id="param_admin_email" model="ir.config_parameter">
            <field name="key">smart_expense.admin_email</field>
            <field name="value">admin@example.com</field>
        </record>
    </data>
</odoo>
