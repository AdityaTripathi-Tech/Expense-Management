<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Currency Rate Cache Tree View -->
        <record id="view_currency_rate_cache_tree" model="ir.ui.view">
            <field name="name">currency.rate.cache.tree</field>
            <field name="model">currency.rate.cache</field>
            <field name="arch" type="xml">
                <tree string="Currency Rate Cache" decoration-muted="is_expired" decoration-warning="is_fallback">
                    <field name="base_currency"/>
                    <field name="rate_date"/>
                    <field name="source_url"/>
                    <field name="fetched_at"/>
                    <field name="expires_at"/>
                    <field name="is_expired"/>
                    <field name="is_fallback"/>
                </tree>
            </field>
        </record>

        <!-- Currency Rate Cache Form View -->
        <record id="view_currency_rate_cache_form" model="ir.ui.view">
            <field name="name">currency.rate.cache.form</field>
            <field name="model">currency.rate.cache</field>
            <field name="arch" type="xml">
                <form string="Currency Rate Cache" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="base_currency"/>
                                <field name="rate_date"/>
                                <field name="source_url"/>
                                <field name="fetched_at"/>
                            </group>
                            <group>
                                <field name="ttl_hours"/>
                                <field name="expires_at"/>
                                <field name="is_expired"/>
                                <field name="is_fallback"/>
                            </group>
                        </group>
                        <group string="Exchange Rates">
                            <field name="rates_json" widget="ace" options="{'mode': 'json'}" nolabel="1"/>
                        </group>
                        <group string="Metadata">
                            <field name="raw_rates_hash"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Currency Rate Cache Action -->
        <record id="action_currency_rate_cache" model="ir.actions.act_window">
            <field name="name">Currency Rate Cache</field>
            <field name="res_model">currency.rate.cache</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No cached currency rates found!
                </p>
                <p>
                    Currency rates will appear here once the system fetches them from external APIs.
                </p>
            </field>
        </record>

    </data>
</odoo>
