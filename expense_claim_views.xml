<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Expense Claim Tree View -->
    <record id="expense_claim_tree_view" model="ir.ui.view">
        <field name="name">expense.claim.tree</field>
        <field name="model">expense.claim</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" 
                  decoration-warning="state=='submitted'" 
                  decoration-success="state=='approved'"
                  decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="claim_date"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="total_amount_company_currency" widget="monetary"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="current_approver_id"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-warning="state in ['submitted', 'under_review']"
                       decoration-success="state=='approved'"
                       decoration-danger="state=='rejected'"/>
                <field name="conversion_pending" invisible="1"/>
                <button name="action_submit" type="object" 
                        string="Submit" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="action_approve" type="object" 
                        string="Approve" class="btn-success"
                        attrs="{'invisible': [('state', 'not in', ['submitted', 'under_review'])]}"/>
            </tree>
        </field>
    </record>

    <!-- Expense Claim Form View -->
    <record id="expense_claim_form_view" model="ir.ui.view">
        <field name="name">expense.claim.form</field>
        <field name="model">expense.claim</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" type="object" 
                            string="Submit for Approval" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" type="object" 
                            string="Approve" class="btn-success"
                            attrs="{'invisible': [('state', 'not in', ['submitted', 'under_review'])]}"/>
                    <button name="action_reject" type="object" 
                            string="Reject" class="btn-danger"
                            attrs="{'invisible': [('state', 'not in', ['submitted', 'under_review'])]}"/>
                    <button name="action_reset_to_draft" type="object" 
                            string="Reset to Draft"
                            attrs="{'invisible': [('state', 'not in', ['rejected', 'cancelled'])]}"/>
                    <button name="action_cancel" type="object" 
                            string="Cancel"
                            attrs="{'invisible': [('state', 'in', ['paid', 'cancelled'])]}"/>
                    <button name="action_mark_paid" type="object" 
                            string="Mark as Paid" class="btn-info"
                            attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                    <button name="action_demo_approve_all" type="object" 
                            string="Demo: Approve All" class="btn-warning"
                            context="{'demo_mode': True}"
                            groups="base.group_system"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,under_review,approved,paid"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_expense_lines" type="object" 
                                class="oe_stat_button" icon="fa-list">
                            <field name="expense_line_count" widget="statbutton" string="Expenses"/>
                        </button>
                        <button name="action_view_approvals" type="object" 
                                class="oe_stat_button" icon="fa-check">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Approvals</span>
                            </div>
                        </button>
                        <button name="action_refresh_currency_conversion" type="object" 
                                class="oe_stat_button" icon="fa-refresh"
                                attrs="{'invisible': [('conversion_pending', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Refresh Rate</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Conversion Pending Alert -->
                    <div class="alert alert-warning" role="alert" 
                         attrs="{'invisible': [('conversion_pending', '=', False)]}">
                        <strong>Currency Conversion Pending!</strong>
                        Currency conversion failed. Please check exchange rates or contact administrator.
                    </div>

                    <group>
                        <group name="left">
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="manager_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="claim_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="submission_date" readonly="1" 
                                   attrs="{'invisible': [('submission_date', '=', False)]}"/>
                        </group>
                        <group name="right">
                            <field name="currency_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="total_amount" widget="monetary"/>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="total_amount_company_currency" widget="monetary" 
                                   attrs="{'invisible': [('currency_id', '=', company_currency_id)]}"/>
                            <field name="conversion_rate" 
                                   attrs="{'invisible': [('currency_id', '=', company_currency_id)]}"/>
                            <field name="conversion_date" 
                                   attrs="{'invisible': [('currency_id', '=', company_currency_id)]}"/>
                            <field name="requires_cfo_approval" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Expense Lines" name="expense_lines">
                            <field name="expense_line_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="currency_id"/>
                                    <field name="unit_amount" widget="monetary"/>
                                    <field name="quantity"/>
                                    <field name="total_amount" widget="monetary" sum="Total"/>
                                    <field name="vendor_name"/>
                                    <field name="has_receipt" widget="boolean"/>
                                    <button name="action_process_ocr" type="object" 
                                            string="Process OCR" icon="fa-eye"
                                            attrs="{'invisible': ['|', ('has_receipt', '=', False), ('ocr_processed', '=', True)]}"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Approvals" name="approvals">
                            <field name="approval_request_ids" readonly="1">
                                <tree decoration-info="state=='pending'" 
                                      decoration-success="state=='approved'"
                                      decoration-danger="state=='rejected'">
                                    <field name="sequence"/>
                                    <field name="approver_id"/>
                                    <field name="approval_rule_id"/>
                                    <field name="required_amount" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="state" widget="badge"/>
                                    <field name="request_date"/>
                                    <field name="approval_date"/>
                                    <field name="comments"/>
                                </tree>
                            </field>
                            <group name="approval_info" string="Current Approval">
                                <field name="current_approver_id" readonly="1"/>
                                <field name="approval_level" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Additional Information" name="additional">
                            <group>
                                <field name="description" placeholder="Brief description of the expense claim..."/>
                                <field name="notes" placeholder="Internal notes..."/>
                                <field name="rejection_reason" readonly="1" 
                                       attrs="{'invisible': [('rejection_reason', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Expense Claim Kanban View -->
    <record id="expense_claim_kanban_view" model="ir.ui.view">
        <field name="name">expense.claim.kanban</field>
        <field name="model">expense.claim</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="total_amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="current_approver_id"/>
                <field name="conversion_pending"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="employee_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#" tabindex="-1">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="o_kanban_record_subtitle">
                                            <field name="total_amount" widget="monetary"/>
                                        </span>
                                        <t t-if="record.conversion_pending.raw_value">
                                            <span class="badge badge-warning">Conversion Pending</span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.current_approver_id.raw_value">
                                            <img t-att-src="kanban_image('hr.employee', 'image_128', record.current_approver_id.raw_value)" 
                                                 t-att-title="record.current_approver_id.value" 
                                                 t-att-alt="record.current_approver_id.value" 
                                                 class="oe_kanban_avatar"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Expense Claim Search View -->
    <record id="expense_claim_search_view" model="ir.ui.view">
        <field name="name">expense.claim.search</field>
        <field name="model">expense.claim</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Claim Reference"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="current_approver_id"/>
                
                <filter string="My Claims" name="my_claims" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="Pending My Approval" name="pending_my_approval" 
                        domain="[('current_approver_id.user_id', '=', uid)]"/>
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" 
                        domain="[('state', 'in', ['submitted', 'under_review'])]"/>
                <filter string="Approved" name="approved" 
                        domain="[('state', '=', 'approved')]"/>
                <filter string="Conversion Pending" name="conversion_pending" 
                        domain="[('conversion_pending', '=', True)]"/>
                
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('claim_date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('claim_date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month" 
                        domain="[('claim_date', '>=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                ('claim_date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Claim Date" name="group_claim_date" context="{'group_by': 'claim_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="expense_claim_action" model="ir.actions.act_window">
        <field name="name">Expense Claims</field>
        <field name="res_model">expense.claim</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="expense_claim_search_view"/>
        <field name="context">{'search_default_my_claims': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense claim
            </p>
            <p>
                Submit your expenses for approval and reimbursement.
                Upload receipts and let OCR extract the details automatically.
            </p>
        </field>
    </record>

    <record id="expense_claim_action_all" model="ir.actions.act_window">
        <field name="name">All Expense Claims</field>
        <field name="res_model">expense.claim</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="expense_claim_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No expense claims found
            </p>
            <p>
                All expense claims from employees will appear here.
            </p>
        </field>
    </record>

    <record id="expense_claim_action_pending_approval" model="ir.actions.act_window">
        <field name="name">Pending Approvals</field>
        <field name="res_model">expense.claim</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="expense_claim_search_view"/>
        <field name="context">{'search_default_pending_my_approval': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No expenses pending your approval
            </p>
            <p>
                Expense claims requiring your approval will appear here.
            </p>
        </field>
    </record>
</odoo>
